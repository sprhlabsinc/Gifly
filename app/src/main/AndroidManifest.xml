<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.gifly">

    <application
        android:name=".GiflyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="info.gifly.WelcomeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.gifly.MainActivity"
            android:label="@string/title_activity_welcome"></activity>
        <activity android:name="info.gifly.PhoneVerificationActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="info.gifly.EnterCodeActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="info.gifly.EnterNameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="info.gifly.CreateStoryActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>